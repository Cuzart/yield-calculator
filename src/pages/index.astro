---
"use client";
import "@/styles/global.css"
import Layout from '../layouts/Layout.astro';
import {YieldForm} from '@/components/YieldForm.tsx';
import '@fontsource-variable/dm-sans';

---

<Layout title="Sparrechner">
	<main>
		<h1 >Sparrechner</h1>
    <YieldForm client:load />
	</main>
</Layout>

<style>
  h1 {
    padding: 20px 0 0px;
		font-size: 2.5rem;
		font-weight: 500;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
    color: inherit;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
    min-height: 100vh;
    font-family: 'DM Sans Variable', sans-serif;
	}



 

</style>
